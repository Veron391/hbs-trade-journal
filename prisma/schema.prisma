// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trade {
  id            String   @id @default(cuid())
  userId        String
  assetType     String   // 'stock' | 'crypto'
  symbol        String
  side          String   // 'buy' | 'sell'
  qty           Float
  price         Float
  entryPrice    Float?   // entry price
  pnl           Float?   // optional, journal hisoblab turishi mumkin
  occurredAt    DateTime // trade sanasi/vaqti (UTC)
  entryDate     DateTime // entry sanasi
  exitDate      DateTime // exit sanasi
  setupNotes    String?  // trade setup notes
  mistakesNotes String?  // mistakes and learnings
  tags          String?  // comma-separated tags
  link          String?  // trade link
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  @@index([userId, occurredAt])
}